# Google API Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
GOOGLE_API_KEY=your_google_api_key

# YouTube Configuration
YOUTUBE_CHANNEL_ID=your_youtube_channel_id
YOUTUBE_UPLOAD_ENABLED=true
YOUTUBE_SHORTS_DEFAULT_TITLE="Amazing Motivational Short #shorts"
YOUTUBE_SHORTS_DEFAULT_DESCRIPTION="Check out this motivational content! #motivation #shorts #inspiration"
YOUTUBE_DEFAULT_TAGS="motivation,shorts,inspiration"
YOUTUBE_DEFAULT_CATEGORY_ID=22
YOUTUBE_DEFAULT_PRIVACY_STATUS=public

# Video Generation Settings
VIDEO_OUTPUT_PATH=./output
VIDEO_FORMAT=mp4
VIDEO_RESOLUTION=1080x1920
VIDEO_DURATION=60

# Server Configuration
PORT=3000

# Scheduling
CRON_SCHEDULE="0 12 * * *"  # Run daily at 12:00 PM
AUTO_UPLOAD_ENABLED=true
TIMEZONE="America/New_York"

# Monitoring and Dashboard
ENABLE_DASHBOARD=true
MONITOR_REFRESH_INTERVAL=5000
MONITOR_MAX_LOG_ENTRIES=15
MONITOR_SHOW_ACTIVE_ONLY=false

# Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Content Configuration
DEFAULT_NICHE=motivation
DEFAULT_THEME=success
DEFAULT_CONFIG_PATH=./config/motivational.yaml
